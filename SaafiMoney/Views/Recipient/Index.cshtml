@model SaafiMoney.Models.RecipientViewModel.RecipientIndexViewModel

@{
    Layout = "_Layout";
}

<h1>Senders</h1>

<table class="table table-hover">
    <tbody>
        @foreach (var recipient in Model.RecipientList)
        {
            <tr>
                <td><a asp-controller="Recipient" asp-action="Index" asp-route-id="@recipient.Id">@recipient.FirstName &nbsp; @recipient.LastName </a></td>


            </tr>

        }
    </tbody>
</table>
