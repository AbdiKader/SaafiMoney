        <!-- Masthead -->
        <header style="height: 80vh;" class="masthead text-white text-center">
            <div class="overlay"></div>
            <div class="container">
                <div class="row">
                    <div class="col-xl-9 mx-auto">
                        <h1 class="mb-5">
                            A CHEAP WAY TO SEND MONEY TO YOUR LOVED ONES
                        </h1>
                    </div>
                    <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                        <form>
                            <div class="form-row">
                                <div class="col-12 col-md-9 mb-2 mb-md-0">
                                    <select type="email" class="form-control form-control-lg" placeholder="Enter your email...">
                                        <option value="sendTo">Select a country to send to...</option>
                                        <option value="ethiopia">Ethiopia</option>
                                        <option value="somalia">Somalia</option>
                                        <option value="somaliland">Somalialand</option>
                                    </select>
                                    @*<input type="email" class="form-control form-control-lg" placeholder="Enter your email...">*@
                                </div>
                                <div class="col-12 col-md-3">
                                    <button type="submit" class="btn btn-block btn-sm btn-primary">Get Started</button>
                                </div>
                            </div>
                        </form>
                   </div>
                </div>
            </div>
        </header>

        <!-- Icons Grid -->
        <section class="features-icons bg-white text-center">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                            <div class="features-icons-icon d-flex">
                                <i class="fa fa-money m-auto text-primary"></i>
                            </div>
                            <h3>Low feee</h3>
                            <p class="font-weight-light mb-0">Guarenteed low fees and exchange rates</p>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                            <div class="features-icons-icon d-flex">
                                <i class="fa fa-rocket m-auto text-primary"></i>
                            </div>
                            <h3>Fast</h3>
                            <p class="font-weight-light mb-0">Send money to your loved ones in minutes</p>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="features-icons-item mx-auto mb-0 mb-lg-3">
                            <div class="features-icons-icon d-flex">
                                <i class="icon-check m-auto text-primary"></i>
                            </div>
                            <h3>Simple & Secure</h3>
                            <p class="font-weight-light mb-0">Powered by state-of-the-art encryption technology</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Testimonials -->


